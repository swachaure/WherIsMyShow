@model RoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<h3 class="text-center h-25 text-info" >Edit Role</h3>
<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 text-center">
            <button type="submit" class="btn btn-primary btn-sm" style="width:auto">
                Edit Role
            </button>
        </div>
    </div>
</form>