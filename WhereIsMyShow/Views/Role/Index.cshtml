@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "RoleList";
}
<h3 class="bg-info text-center h-25" >Roles List</h3>
<table class="table table-info">
    <thead>
        <tr>
            <th>Role Name</th>
            <th colspan="2" >Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <th>@role.Name</th>
            <td>  <a asp-controller="Role" asp-action="Edit" asp-route-role="@role.Id" class="btn btn-sm btn-primary">Edit</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete Role @role.Name ?')">
                        Delete
                    </button>

                </form>
            </td>
            <td>  <a asp-controller="UserRole" asp-action="Index" asp-route-roleId="@role.Id" class="btn btn-sm btn-primary">Add or Remove Users from Role</a></td>

        </tr>
    }
        </tbody>
    </table>
<div class="text-center">
    <a asp-controller="Role" asp-action="Create" class="btn btn-sm btn-info">Create Role</a>
</div>