@model List<WhereIsMyShow.Models.BulkBookingUpdateViewModel>

@{
    ViewData["Title"] = "User Booking";
}

<h3 class="text-center text-info">Bulk Booking</h3>

<form asp-action="BulkBookingApprove" method="post">
    <table id="myTable" class="table table-bordered table-info">
        <thead>
            <tr>
                <th>
                    Show Name
                </th>
                <th>
                    Booking Date
                </th>
                <th>
                    Status
                </th>
                <th>
                    Select to Approve
                </th>



            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count(); i++)
            {
                var status = Model[i].Status == 0 ? "Pending" : "Approved";
                <tr>
                    <td>
                        @Model[i].Show.ShowName <input type="hidden" asp-for="@Model[i].ShowId" />
                    <input type="hidden" asp-for="@Model[i].UserId" />

                </td>


                <td>@Model[i].BookingDate.ToShortDateString() <input type="hidden" asp-for="@Model[i].BookingDate" /> </td>

                <td>
                    @status
                    <input type="hidden" asp-for="@Model[i].BookingId" />
                </td>
                <td><input type="checkbox" asp-for="@Model[i].isSelected" /> <input type="hidden" asp-for="@Model[i].Status" /></td>
            </tr>
        }
        </tbody>

    </table>

    <button type="submit" class="btn btn-sm btn-info" > Click to Update </button>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').dataTable({
            responsive: true,
            columnDefs: [
                { targets: [-1, -3], className: 'dt-body-right' }
            ]
        });


    });
</script>


