@model IEnumerable<WhereIsMyShow.Models.Booking>

@{
    ViewData["Title"] = "User Booking";
}

<h3 class="text-center h-25 bg-info text-white">User Booking</h3>


<table id="myTable" class="table table-bordered table-info">
    <thead>
        <tr>
            <th>
                Show Name
            </th>
            <th>
                 Booking Date
            </th>
            <th>
                Number of Tickets
            </th>
            <th>
               Status
            </th>

            

            
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            var status = booking.Status == 0 ? "Pending" : "Approved";
            <tr>
                <td>@booking.Show.ShowName</td>
                

                <td>@booking.BookingDate.ToShortDateString() </td>
                <td>@booking.NumberOfTickets</td>
                <td>@status</td>

            </tr>
        }
    </tbody>

</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').dataTable({
            responsive: true,
            columnDefs: [
                { targets: [-1, -3], className: 'dt-body-right' }
            ]
        });


    });
</script>


