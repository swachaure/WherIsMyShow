@model BookMyShow.Models.LogInViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            <p class="text-danger">@ViewBag.Error</p>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="text-uppercase text-center">LogIn</h5>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RememberMe"></label>
                                <input asp-for="RememberMe" class="form-control" type="checkbox" />
                                <span asp-validation-for="RememberMe" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="alert alert-primary text-center">
                        <input type="submit" value="LogIn" class="btn btn-info text-uppercase rounded-0" />
               </div>
                        </form>
            </div>
        </div>
    </div>
</div>