@model IEnumerable<BookMyShow.Models.Show>

@{
    ViewData["Title"] = "ShowList";
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 p-3 bg-info text-center">
                <h3 >Show List</h3>
                @*<p class="text-sm">Display of Shows that are in Queue</p>*@
            </div>
            <div class="card-body p-3">
                <div class="row">
                    @foreach (var show in Model)
                    {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain h-100">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="@Url.Content(show.ShowImage)" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">

                                <a href="javascript:;">
                                    <h5>
                                        @show.ShowName
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @show.Description
                                </p>
                                <p class="mb-4 text-sm">
                                    <span class="text-info">  Genre</span>  <span class="text-capitalize ">  @show.Genre</span>
                                </p>
                                <p class="mb-4 text-sm">
                                    <span class="text-info">  StartDate</span>  <span class="text-capitalize ">  @show.StartDate.ToShortDateString()</span>
                                   
                                </p>
                                <p class="mb-4 text-sm">
                                    <span class="text-info">  StartTime</span>  <span class="text-capitalize ">  @show.StartTime</span>
                                    
                                </p>
                                <p class="mb-4 text-sm">
                                    <span class="text-info">  EndTime</span>  <span class="text-capitalize ">  @show.EndTime</span>
                                   
                                </p>
                                <a href="javascript:;" class="btn btn-info">Click here to Book this Show</a>
                            </div>
                        </div>
                    </div>

                    }
                    @*<div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card h-100 card-plain border">
                            <div class="card-body d-flex flex-column justify-content-center text-center">
                                <a href="javascript:;">
                                    <i class="fa fa-plus text-secondary mb-3"></i>
                                    <h5 class=" text-secondary"> New Show </h5>
                                </a>
                            </div>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>

